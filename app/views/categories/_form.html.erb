<%= render 'shared/errors', obj: @category %>

<div class="container">
			<%= form_for(@category, :html => {class: "form", role: "form"}) do |f| %>
			  <div class="form-group row">
				  <div class="col-sm-2 col-form-label text-right">
			      <%= f.label :category %>
			    </div>
		      <div class="col-sm-8">
		        <%= f.text_field :name, class: "form-control", placeholder: "Category Name", autofocus: true %>
			    </div>
			  </div>
		  	<div class="form-group row justify-content-center">
		  		<div class="col-sm-8">
			      <%= f.submit class: "btn-dark btn-lg btn-block" %>
			    </div>
			  </div>
			  </div>
			<% end %>
	  <div class="row">
	    <div class="col-sm-6 offset-sm-4">
	    	[ <%= link_to "Cancel Request and Return to Article Listing", articles_path %> ]
	    </div>
	  </div>
	</div>


<div class="BackToArticle">
  <%= link_to "Back to Article Index", articles_path %>
</div>