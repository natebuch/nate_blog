<h1 align="center">Listing All Categories</h1>


<%= will_paginate %>
	<% @categories.each do |category| %>
		<ul class="listing">
			<div class="row justify-content-center">
				<div class="card-category card-lg bg-light col-sm-6">
					<li class="article-title">
						<%= link_to "#{category.name}",  category_path(category) %>
						<li style="list-style: none;"><small><%= pluralize(category.articles.count, "article") %></small></li>
					</li>
				</div>
			</div>
		</ul>
	<% end %>
<%= will_paginate %>

