<h1 align="center">Listing All Categories</h1>


<div align="center">
	<div align="center">
		<%= will_paginate %>
			<% @categories.each do |category| %>
				<ul class="listing">
					<div class="row">
						<div class="card-category card-lg bg-light col-sm-6 offset-sm-3">
							<li class="article-title">
								<%= link_to "#{category.name}",  category_path(category) %>
							</li>
						</div>
					</div>
				</ul>
			<% end %>
	  <%= will_paginate %>
	</div>
</div>
