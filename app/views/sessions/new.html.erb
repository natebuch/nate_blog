<h1 align="center">LogIn</h1>

<%= form_for(:session, :html => {class: "form", role: "form"}, url:login_path) do |f| %>
  <div class="form-group row">
	  <div class="col-sm-2 col-form-label text-right">
      <%= f.label :email %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :email, class: "form-control", placeholder: "Enter Email", autofocus: true %>
    </div>
  </div>
	<div class="form-group row">
	  <div class="col-form-label col-sm-2 text-right">
	    <%= f.label :password %>
	  </div>
    <div class="col-sm-8">
	    <%= f.password_field :password, class: "form-control", autocomplete: "off"%>
	  </div>
	</div>
	<div class="form-group row justify-content-center">
		<div class="col-sm-8">
      <%= f.submit "Log In", class: "btn-dark btn-lg btn-block" %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-sm-6 offset-sm-4">
	[ <%= link_to "Cancel Request and Return to Article Listing", articles_path %> ]
  </div>
</div>

<div class="BackToArticle">
  <%= link_to "Back to Article Index", articles_path %>
</div>