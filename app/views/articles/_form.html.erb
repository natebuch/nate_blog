<%= render 'shared/errors', obj: @article %>

<div class="container">
	<div class='row'>
		<div class="col-sm-12">
			<%= form_for(@article, :html => {class: "form", role: "form"}) do |f| %>
			  <div class="form-group row">
				  <div class="col-sm-2 col-form-label text-right">
			      <%= f.label :title %>
			    </div>
		      <div class="col-sm-8">
		        <%= f.text_area :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
			    </div>
			  </div>
				<div class="form-group row">
				  <div class="col-form-label col-sm-2 text-right">
				    <%= f.label :description %>
				  </div>
			    <div class="col-sm-8">
				    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of Article", autofocus: true %>
				  </div>
				</div>
				<div class="form-group row justify-content-center">
		  		<div class="col-sm-8 center ">
			      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
			      <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text } %>
 			      <% end %>
			    </div>
			  </div>
		  	<div class="form-group row justify-content-center">
		  		<div class="col-sm-8">
			      <%= f.submit class: "btn-dark btn-lg btn-block" %>
			    </div>
			  </div>
			<% end %>
	  <div class="row">
	    <div class="col-sm-6 offset-sm-4">
	    	[ <%= link_to "Cancel Request and Return to Article Listing", articles_path %> ]
	    </div>
	  </div>
	</div>


<div class="BackToArticle">
  <%= link_to "Back to Article Index", articles_path %>
</div>