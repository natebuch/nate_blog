<% if @article.errors.any? %>
<h2>The following errors prevented article from being saved:</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<div class='row'>
	<div class="col-lg-12">
		<%= form_for(@article, :html => {class: "form", role: "form"}) do |f| %>
		  <div class="form-group row">
			  <div class="col-form-label col-lg-2">
		      <%= f.label :title %>
		    </div>
	      <div class="col-lg-8">
	        <%= f.text_area :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
		    </div>
		  </div>
			<div class="form-group row">
			  <div class="col-form-label col-md-2">
			    <%= f.label :description %>
			  </div>
		    <div class="col-lg-8">
			    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of Article", autofocus: true %>
			  </div>
			</div>
	  	<div class="form-group row justify-content-center">
	  		<div class="col-lg-8">
		      <%= f.submit class: "btn-dark btn-lg btn-block" %>
		    </div>
		  </div>
    <% end %>
  </div>
</div>


<%= link_to "Back to Article Index", articles_path %>